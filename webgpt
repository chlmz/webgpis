  <!-- Small interactive behaviors implemented with progressive enhancement and accessibility in mind -->
  <script>
    (function($){
      "use strict";

      // Smooth focus when skip link used (ensures screen readers move)
      $('.skip-link').on('click keydown', function(e){
        var key = e.which || e.keyCode;
        if (e.type === 'click' || key === 13 || key === 32) {
          $('#maincontent').attr('tabindex','-1').focus();
        }
      });

      // Toggle project notes button aria-expanded
      $('#openMoreProject').on('click', function(){
        var $btn = $(this);
        var expanded = ($btn.attr('aria-expanded') === 'true');
        $btn.attr('aria-expanded', (!expanded).toString());
      });

      // Contact form: client-side accessible validation and mailto fallback
      $('#contactForm').on('submit', function(e){
        e.preventDefault();
        var form = this;
        var name = $('#name').val().trim();
        var email = $('#email').val().trim();
        var message = $('#message').val().trim();
        var valid = true;

        // simple validation
        if (!name) { $('#name').addClass('is-invalid'); valid = false; } else { $('#name').removeClass('is-invalid'); }
        if (!email || !/^\S+@\S+\.\S+$/.test(email)) { $('#email').addClass('is-invalid'); valid = false; } else { $('#email').removeClass('is-invalid'); }
        if (!message) { $('#message').addClass('is-invalid'); valid = false; } else { $('#message').removeClass('is-invalid'); }

        if (!valid) {
          $(form).find(':invalid').first().focus();
          return;
        }

        // Use mailto as a predictable fallback for static single-page sites
        var subject = encodeURIComponent('GPIS contact from ' + name);
        var body = encodeURIComponent('Name: ' + name + '\nEmail: ' + email + '\n\nMessage:\n' + message);
        var mailto = 'mailto:chlmz@yahoo.com?subject=' + subject + '&body=' + body;

        // Attempt to open mail client
        window.location.href = mailto;
      });

      // Copy lead email to clipboard (with a11y announcement)
      $('#copyEmailBtn').on('click', function(){
        var email = 'chlmz@yahoo.com';
        navigator.clipboard && navigator.clipboard.writeText
          ? navigator.clipboard.writeText(email).then(function(){
              alert('Lead email copied to clipboard: ' + email);
            })
          : (function(){
              // fallback
              var $temp = $('<input>');
              $('body').append($temp);
              $temp.val(email).select();
              document.execCommand('copy');
              $temp.remove();
              alert('Lead email copied to clipboard: ' + email);
            })();
      });

      // Ensure focus outlines visible for keyboard users (detect keyboard navigation)
      function handleFirstTab(e) {
        if (e.key === 'Tab') {
          document.documentElement.classList.add('user-is-tabbing');
          window.removeEventListener('keydown', handleFirstTab);
        }
      }
      window.addEventListener('keydown', handleFirstTab);

      // Ensure collapse region gets proper aria-hidden managed by Bootstrap's events
      var projectCollapse = document.getElementById('projectMore');
      projectCollapse.addEventListener('shown.bs.collapse', function () {
        projectCollapse.setAttribute('aria-hidden','false');
      });
      projectCollapse.addEventListener('hidden.bs.collapse', function () {
        projectCollapse.setAttribute('aria-hidden','true');
      });

      // Small progressive enhancement: keyboard-accessible "Back to top" links
      $('a[href="#top"]').on('click', function(e){
        e.preventDefault();
        $('#top')[0].scrollIntoView({behavior:'smooth'});
        $('#top').focus();
      });

    })(jQuery);
  </script>
</body>
</html>
